---
import SITE_CONFIG from "@/config";
const { Navs, Title } = SITE_CONFIG;
// Svg 组件
import Svg from "@/components/Svg/Svg.astro";
// 侧边栏 MobileSidebar 样式
import "./MobileSidebar.less";
---

<nav class="byt-sidebar">
	<section class="main">
		<div class="byt-sidebar-list flex items-center user-panel">
			<Svg src={'logo'} />
			<h3>{Title}</h3>
		</div>

		<div class="byt-sidebar-list byt-link-list">
			{
				Navs.map(i => (
				i.children?i.children.map(j => (
					<a class={j.link?.replace("/", "")} href={j.link} target={i.target ? "_blank" : "_self"}>
						<Svg src={j.icon} />
						{j.text}
					</a>
				)):<a class={i.link?.replace("/", "")} href={i.link} target={i.target ? "_blank" : "_self"}>
						<Svg src={i.icon} />
						{i.text}
					</a>
				))
			}
		</div>
	</section>
</nav>
