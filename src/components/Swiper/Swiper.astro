---
const { data } = Astro.props;
let reg = /url\("?'?.*"?'?\)/g
let regReplace = /"|'|url|\(|\)/g;

const getImageUrl = (item: string) => item.match(reg)?.[0].replace(regReplace, '');
---
<!-- 轮播容器 -->
 <div class="banner-swiper w-full mb-4">
     <div class="swiper" id="swiper">
         <div class="swiper-wrapper">
             {data.map((item:string) => (
                 <div class="swiper-slide overflow-hidden">
                     <img class="rounded-md object-cover w-full h-[10.88rem] md:h-[16.88rem]" data-byt-lz-src={getImageUrl(item)} alt="" />
                 </div>
             ))}
         </div>
         <div class="swiper-pagination"></div>
     </div>
